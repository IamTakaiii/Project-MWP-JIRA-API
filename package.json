{
  "name": "jira-worklog-backend",
  "version": "1.0.0",
  "description": "JIRA Worklog API Proxy with Elysia.js",
  "type": "module",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "NODE_ENV=production bun run src/index.ts",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "lint": "bunx @biomejs/biome check --write src/",
    "typecheck": "bunx tsc --noEmit",
    "test": "bun test"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.1.0",
    "elysia": "^1.1.0",
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@types/bun": "latest",
    "typescript": "^5.5.0"
  }
}
